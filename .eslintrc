{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true,
    "jasmine": true
  },
  "globals": {
    "i18n": true,
    "__DEV__": true
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": 0,
    "react-native/no-unused-styles": 2,
    "react/no-unescaped-entities": [
      2,
      {
        "forbid": [
          ">",
          "}"
        ]
      }
    ],
    "react-native/split-platform-components": 2
  }
}